<div class="container">
  <div class="row">
    <div class="card text-center text-white bg-dark mb-3 w-100" style="max-width: 50rem;">
      <div class="card-header bg-secondary">
        <h3>{{ pregunta.[0] }}</h3>
        <h2>{{ pregunta.[1] }}</h2>
      </div>
      <div class="card-body text-center">
        {{> option}}
      </div>
      <div class="card-footer bg-secondary text-white">
        <div class="row">
          <div class="col-6">
            <span> Pregunta {{num}} de {{lenQuiz}}</span>
          </div>
          <div class="col-6">Valor: {{Puntos}} puntos.</div>
        </div>
      </div>
    </div>
  </div>
</div>